{
  "name": "acceptance",
  "version": "1.0.0",
  "keywords": [
    "cucumber",
    "puppeteer"
  ],
  "files": [
    "/features"
  ],
  "scripts": {
    "start": "npx cucumber-js --format progress -f json:test/reports/cucumber_report.json",
    "work": "npx cucumber-js --format progress --tags @work",
    "generate-report": "yarn start && node reporter.js",
    "test": "npx cucumber-js features/*.feature --require features/steps/*.js --format progress --tags @work"
  },
  "dependencies": {
    "axe-puppeteer": "^1.1.1",
    "axe-reports": "^1.1.11",
    "cucumber": "^6.0.5",
    "cucumber-html-reporter": "^5.5.0",
    "dotenv": "^8.6.0",
    "pixelmatch": "^5.2.1",
    "puppeteer": "^8.0.0"
  },
  "puppeteerOptions": {
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
    "PUPPETEER_EXECUTABLE_PATH": "which chromium"
  }
}
